<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="false" scanPeriod="100000" debug="false">
	
	<appender name="AddalCPConsoleAppender" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}-[%-5level] %thread %logger{0} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<root level="info">
		<appender-ref ref="AddalCPConsoleAppender" />
	</root>
</configuration>